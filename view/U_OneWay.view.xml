<mvc:View xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table"
	xmlns="sap.ui.commons"
	controllerName="sap.training.view.U_OneWay"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"> 
 
 <t:Table width="100%" title="Products" visibleRowCount="10"
        selectionMode="Single" rows="{/Products}">
        <t:columns>
            <t:Column>
                <t:label>
                    <Label text="Id"/>
                </t:label>
                <t:template>
                    <TextView text="{ID}"/>
                </t:template>
            </t:Column>

            <t:Column>
                <t:label>
                    <Label text="Name"/>
                </t:label>
                <t:template>
                    <TextView text="{Name}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Description"/>
                </t:label>
                <t:template>
                    <TextView text="{Description}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Release Date"/>
                </t:label>
                <t:template>
                    <TextView text="{
                        path: 'ReleaseDate',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {style: 'medium' }
                    }"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Discontinued Date"/>
                </t:label>
                <t:template>
                     <TextView text="{
                        path: 'DiscontinuedDate',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {style: 'medium' }
                    }"/>
                </t:template>
            </t:Column>
            
             <t:Column>
                <t:label>
                    <Label text="Rating"/>
                </t:label>
                <t:template>
                   <RatingIndicator editable="false"
                                    value="{Rating}"/>
                </t:template>
            </t:Column>
            
             <t:Column>
                <t:label>
                    <Label text="Price"/>
                </t:label>
                <t:template>
                    <TextView text="{
                        path: 'Price',
                        type: 'sap.ui.model.type.Float',
                        formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}
                    }"/>
                </t:template>
            </t:Column>

        </t:columns>
    </t:Table>
    
 
    
    <f:SimpleForm>
		<f:content>
	        <core:Title text="Update Product" />
	        
	        <Label text="Id"/>
		    <TextField value="{updatedProductData>/ID}"/>
		    
		    <Label text="Name"/>
		    <TextField value="{updatedProductData>/Name}"/>
		    
		    <Label text="Description"/>
		    <TextField value="{updatedProductData>/Description}"/>
		    
		    <Label text="Release Date"/>
		    <DatePicker value="{
		        path: 'updatedProductData>/ReleaseDate',
		        type: 'sap.ui.model.type.Date',
		        formatOptions: {source: {pattern: 'yyyy-MM-dd'}}
		    }"/>
		    
		    <Label text="Discontinued Date"/>
		    <DatePicker value="{
		        path: 'updatedProductData>/DiscontinuedDate',
		        type: 'sap.ui.model.type.Date',
		        formatOptions: {source: {pattern: 'yyyy-MM-dd'}}
		    }"/>
		    
		     <Label text="Rating"/>
		     <RatingIndicator value="{updatedProductData>/Rating}"/>
			
			<Label text="Price"/>
			<TextField value="{
                        path: 'updatedProductData>/Price',
                        type: 'sap.ui.model.type.Float',
                        formatOptions: {minFractionDigits: 2, maxFractionDigits: 2},
                        constraints: {minimum: 0}
                    }"/>
            
            <Label text=""/>
        	<Button text="Update" press="onUpdateProduct" width="150px"/>
		
		</f:content>
		
	</f:SimpleForm>
    
</mvc:View>