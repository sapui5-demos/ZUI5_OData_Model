<mvc:View xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.commons.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table"
	xmlns="sap.ui.commons"
	controllerName="sap.training.view.Master_Detail"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
    <t:Table width="100%" title="Business Partners" visibleRowCount="5"
        selectionMode="Single" editable="false" rows="{/BusinessPartnerSet}"
        rowSelectionChange="onBPChange">
        <t:columns>
            <t:Column>
                <t:label>
                    <Label text="BP Id"/>
                </t:label>
                <t:template>
                    <TextField value="{BpID}"/>
                </t:template>
            </t:Column>

            <t:Column>
                <t:label>
                    <Label text="Company Name"/>
                </t:label>
                <t:template>
                    <TextField value="{CompanyName}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Street"/>
                </t:label>
                <t:template>
                    <TextField value="{Street}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Postal Code"/>
                </t:label>
                <t:template>
                    <TextField value="{PostalCode}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="City"/>
                </t:label>
                <t:template>
                    <TextField value="{City}"/>
                </t:template>
            </t:Column>
        </t:columns>
    </t:Table>
    
    <t:Table id="SOTable" width="100%" title="Sales Orders" visibleRowCount="5"
        selectionMode="Single" editable="false">
        <t:columns>
            <t:Column>
                <t:label>
                    <Label text="Order Id"/>
                </t:label>
                <t:template>
                    <TextField value="{SoID}"/>
                </t:template>
            </t:Column>

            <t:Column>
                <t:label>
                    <Label text="Buyer Id"/>
                </t:label>
                <t:template>
                    <TextField value="{BuyerID}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Buyer Name"/>
                </t:label>
                <t:template>
                    <TextField value="{BuyerName}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Billing Status"/>
                </t:label>
                <t:template>
                    <TextField value="{BillingStatus}"/>
                </t:template>
            </t:Column>
            
            <t:Column>
                <t:label>
                    <Label text="Delivery Status"/>
                </t:label>
                <t:template>
                    <TextField value="{Delivery Status}"/>
                </t:template>
            </t:Column>
        </t:columns>
    </t:Table>
	
</mvc:View>